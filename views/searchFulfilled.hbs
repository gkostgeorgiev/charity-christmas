<section class="search">
    <h1>Search</h1>

    <form class="search-form" action="" method="">
        <input type="text" class="search-title" name="search1" placeholder="Search Title..." value="{{req.body.search1}}">
        <input type="text" class="search-charity" name="search2" placeholder="Search Charity..." value="{{req.body.search2}}">
        <button type="submit" class="btn-search">Search</button>
    </form>

    <!--If there are matches after search-->
    {{#if toys}}
    <div class="search-result">
        <div class="search-list">
            {{#each toys}}
            {{>searchPartial}}
            {{/each}}
        </div>
    </div>
    {{else}}
    <!--If there are no matches-->
     <div class="no-match">
                <p>No match was found!</p>
            </div>
    {{/if}}
</section>